<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder mvcc-enabled="true" package-path="com.liferay.osb.distributed.messaging">
	<namespace>DM</namespace>
	<entity local-service="true" name="QueuedMessage" remote-service="false">

		<!-- PK fields -->

		<column name="queuedMessageId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="createDate" type="Date" />

		<!-- Other fields -->

		<column name="messageBrokerClassName" type="String" />
		<column name="topic" type="String" />
		<column name="messageObject" type="Blob" />

		<!-- Order -->

		<order by="asc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="MessageBrokerClassName" return-type="Collection">
			<finder-column name="messageBrokerClassName" />
		</finder>
	</entity>
</service-builder>