<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder mvcc-enabled="true" package-path="com.liferay.osb.koroneiki.phytohormone">
	<namespace>Koroneiki</namespace>
	<entity local-service="true" name="Entitlement" remote-service="true">

		<!-- PK fields -->

		<column name="entitlementId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="entitlementDefinitionId" type="long" />
		<column name="classNameId" type="long" />
		<column name="classPK" type="long" />
		<column name="name" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="EntitlementDefinitionId" return-type="Collection">
			<finder-column name="entitlementDefinitionId" />
		</finder>
		<finder name="C_C" return-type="Collection">
			<finder-column name="classNameId" />
			<finder-column name="classPK" />
		</finder>
	</entity>
	<entity local-service="true" name="EntitlementDefinition" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="entitlementDefinitionId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="entitlementDefinitionKey" type="String" />
		<column name="classNameId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="definition" type="String" />
		<column name="status" type="int" />

		<!-- Order -->

		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->

		<finder name="EntitlementDefinitionKey" return-type="EntitlementDefinition" unique="true">
			<finder-column name="entitlementDefinitionKey" />
		</finder>
		<finder name="C_N" return-type="EntitlementDefinition">
			<finder-column name="classNameId" />
			<finder-column name="name" />
		</finder>
		<finder name="C_LikeN" return-type="Collection">
			<finder-column name="classNameId" />
			<finder-column comparator="LIKE" name="name" />
		</finder>
		<finder name="C_S" return-type="Collection">
			<finder-column name="classNameId" />
			<finder-column name="status" />
		</finder>
	</entity>
	<exceptions>
		<exception>EntitlementDefinitionDefinition</exception>
		<exception>EntitlementDefinitionName</exception>
	</exceptions>
</service-builder>